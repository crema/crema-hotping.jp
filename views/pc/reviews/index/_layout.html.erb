<% title widget.name %>
<% content_for :content do %>
  <%= content_tag :div, class: "widget widget-reviews pagination-list #{'no-data' if reviews.empty?}" do %>
    <div class="widget-heading">
      <div class="widget-title">
        <%=raw widget.title %>
      </div>
    </div>
    <div class="widget-body">
      <%= render 'reviews/top_menu' %>
      <%= render 'reviews/notices' %>
      <% review_option_types = brand.searchable_options %>
      <% if review_option_types.present? %>
        <div class="review_options_search_container review_options_search_container--reviews_index">
          <%= render 'reviews/review_options_search', review_option_types: review_option_types %>
        </div>
      <% end %>
      <div class="page">
        <div class="no-data-message">
          <%= render 'common/reviews/no_reviews' %>
        </div>
        <ul class="reviews reviews-default">
          <%= widget.render_reviews(self, reviews) %>
        </ul>
      </div>
    </div>
    <div class="widget-footer">
      <%= render 'reviews/pagination' %>
    </div>
  <% end %>
  <%= render 'common/shared/form_upload_image' %>
<% end %>
